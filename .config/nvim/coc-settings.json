{
   // General coc settings
   // suggestion settings
     "suggest.timeout": 1000,
     "r.lsp.debug": true,
     "suggest.minTriggerInputLength": 5,

   // Rust settings 
     "rust-analyzer.serverPath": "/usr/bin/rust-analyzer",

   // Python settings 
     //"python.linting.enabled": false,
     //"python.jediEnabled": false,

     "languageserver": 
     {
        "digestif": 
        {
          "command"   : "/home/junaikin/.cargo/bin/texlab",
          "ignoredRootPaths": ["~"],
          "filetypes" : ["tex", "plaintex", "context", "bib"]
        },
        "ccls": {
          "command": "ccls",
          "args": ["--log-file=/tmp/ccls.log", "-v=1"],
          "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
          "rootPatterns": [".ccls", "compile_commands.json"],
          "initializationOptions": {
            "cache": {
              "directory": "/tmp/ccls"
            },
            "client": {
              "snippetSupport": true
        },
            "index": {
              "onChange": true
             },
            "highlight": { "lsRanges" : true }
      }
    },
        "R": {
            "command": "/usr/local/bin/R",
            "args" : [ "--slave", "-e", "languageserver::run()"],
            "filetypes" : ["r","rmd"]
    }
    
  }
}
